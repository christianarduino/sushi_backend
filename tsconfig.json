{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "src",                          
    "rootDir": "/",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*", "build"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}